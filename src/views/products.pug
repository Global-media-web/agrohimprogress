extends layout/layout.pug
include mixins/header.pug

block title
    title Каталог
block style
    link(rel="stylesheet", href="/css/simplebar.css")
    link(rel="stylesheet", href="/css/products.css")
block content
    header.site-header
        .container.site-header__container
            .header-logo
                a(href="/")
                    img(src="/img/logotips/agrohim.png", alt="AgroHimProgress")
            +header('/products.html')
            a(href="tel:87182333929").site-menu__link 8 (7182) 333-929
            button.mobile-menu-btn
                span
                span
                span
    section.products
        .container
            h1.page-title Наши средства
            ul.products-list
                li.products-item
                    a(href="/product-page.html").product-label.product-label_1
                        span Фунгициды
                    .product-desc Химические вещества для борьбы с грибковыми болезнями растений (бордоская жидкость, серный цвет и др.), а также для протравливания семян (формалин, ТМТД, Фундазол, гранозан, меркуран) с целью освобождения их от спор паразитных грибов (типа головни для зерновых семян).
