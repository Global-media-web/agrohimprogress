.product-desc {
    margin-top: 30px;
    height: 0;
    overflow: hidden;
    position: relative;
    transition: all 1s;
    font-size: 14px;
    font-weight: 600;
    display: none;
    @media (--tablet) {
        display: block;
        height: auto;
        font-size: 10px;
    }
}
.filter {
    width: 70%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    @media (--laptop) {
        width: 90%;
    }
    @media (--tablet) {
        display: block;
    }
    &__control {
        width: 49%;
        background-color: #fff;
        box-shadow: 0 0 46px 11px rgba(0, 0, 0, .07);
        padding: 35px;
        @media (--tablet) {
            width: 100%;
            margin-bottom: 30px;
        }
        @media (--mobile) {
            padding: 25px;
        }
    }
    &__output {
        width: 47%;
        @media (--tablet) {
            width: 100%;
        }
    }
    &__title {
        display: block;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        opacity: 0.58;
        margin-bottom: 10px;
        @media (--mobile) {
            font-size: 10px;
        }
    }
    &__list {
        list-style: none;
        margin: 0;
        padding: 0;
        height: 300px;
        @media (--tablet) {
            height: 200px;
        }
    }
}
.control {
    width: 100%;
    margin-bottom: 30px;
    &__select {
        width: 100%;
        background-color: #f8f8fa;
        padding: 15px 25px;
        border: none;
        color: var(--dark-text-color);
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        @media (--mobile) {
            font-size: 10px;
        }
    }
}